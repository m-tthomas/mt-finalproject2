{% extends '_templates/base.njk' %}

{% block page_title %}Tour Dates{% endblock %}

{% block content %}
<article class="container">
<div class="row text-center">
  <div class="col-md-8 offset-md-2">
  <h1>Tour Dates</h1>
  </div>
  </div>
  <div class="row">
  <div class="table-responsive">
  <table class="table">
    <thead>
      <tr>
        <th>Date</th>
        <th>City</th>
        <th>Venue</th>
      </tr>
      <tbody>
      {% for tour in tour.tour2021 %}
      <tr>
        <td>{{ tour.date }}</td>
        <td>{{ tour.city }}</td>
        <td>{{ tour.venue }}</td>
      </tr>
       {% endfor %}
    </tbody>
  </table>
</div>

</article>
  {% endblock %}

