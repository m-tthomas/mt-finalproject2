{% extends '_templates/base.njk' %}

{% set relative_path = "../" %}

{% block page_title %}{{ name }}{% endblock %}

{% block page_description %}{{ name }}{% endblock %}

{% block content %}
  <article class="container">
    <div class="row">
      <div class="col-sm-6 col-md-3 col-lg-6">
          <img src="{{relative_path}}img/members/{{ image }}" alt="name" class="img-fluid mb-4">
      </div>
      <div class="col-sm-6 col-md-9 col-lg-6">
          <h1 class="text-uppercase">{{ name }}</h1>
          <p class="byline">{{ instruments }} | {{ birthplace }} | {{ birthdate }} | {{ tenure }}</p>
          <p>{{ description | safe }}</p>
      </div>
    </div>
  </article>
{% endblock %}