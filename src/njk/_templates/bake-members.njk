{% extends '_templates/base.njk' %}

{% set relative_path = "../" %}

{% block page_title %}{{ name }}{% endblock %}

{% block page_description %}{{ name }}{% endblock %}

{% block content %}
  <article class="container">
    <div class="row">
      <div class="col-sm-4">
          <img src="img/members/{{ image }}.jpg" alt="name" class="img-fluid mb-4">
      </div>
      <div class="col-sm-8">
          <h1>{{ name }}</h1>
          <h3>{{ instruments }}</h3>
          <h3>{{ tenure }}</h3>
          <h4>{{ birthplace }}</h4>
          <p>{{ description | safe }}</p>
      </div>
    </div>
  </article>
{% endblock %}